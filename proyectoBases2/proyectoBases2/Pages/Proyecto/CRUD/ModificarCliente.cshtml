@page
@model proyectoBases2.Pages.Proyecto.CRUD.ModificarClienteModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar clientes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Editar empleado</h2>

        <form method="POST">

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Cedula del cliente</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="numero" value="@Model.Cliente.cedulaCliente" readonly>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Nombre del cliente</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="numero" value="@Model.Cliente.nombreCliente">
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/Proyecto/CRUD/IndexCRUD" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

